<body>
  <h1>A SINGLE BOOK</h1>
  <%= book.id %>
  <p><%= book.author %></p>
  <p><%= book.title %></p>
  <p><%= book.year %></p>

  <br />
  <form method="POST" action="/books/<%= book.id%>">
    <label for="year">Year</label>
    <input type="text" name="year" id="year" />

    <button type="submit">Update the book's year</button>
  </form>

</body>
</html>